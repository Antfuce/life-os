# Frontend (Vite)
# Public backend origin used by the Base44 frontend.
VITE_API_ORIGIN=http://127.0.0.1:3001
# Keep legacy Base44 entity pages disabled by default (Memory/Social/Deliverables)
# to avoid demo instability. Set true only when those pages are actively maintained.
VITE_ENABLE_LEGACY_BASE44_PAGES=false
# Internal debug panel for action approvals in Home view.
VITE_SHOW_ACTION_APPROVAL_DEBUG=false

# Backend (Fastify)
PORT=3001
HOST=127.0.0.1

# OpenClaw integration
# Preferred: set OPENCLAW_GATEWAY_TOKEN directly.
OPENCLAW_GATEWAY_TOKEN=
# Optional fallback: path to openclaw.json containing gateway.auth.token.
OPENCLAW_CONFIG=
OPENCLAW_RESPONSES_URL=http://127.0.0.1:18789/v1/responses
LIFE_OS_MODEL=openai-codex/gpt-5.2
LIFE_OS_MAX_TOKENS=1200

# Production readiness / security / observability
BILLING_SIGNING_SECRET=
BILLING_RECONCILIATION_ALERT_WEBHOOK_URL=
ALERT_DELIVERY_MAX_ATTEMPTS=5
ALERT_DELIVERY_BASE_BACKOFF_MS=30000
ALERT_DELIVERY_MAX_BACKOFF_MS=1800000
RECONCILIATION_AUTOMATION_ENABLED=false
RECONCILIATION_AUTOMATION_HOURLY_INTERVAL_MS=3600000
RECONCILIATION_AUTOMATION_WORKER_INTERVAL_MS=120000
RECONCILIATION_AUTOMATION_WORKER_BATCH=100
LIVEKIT_WEBHOOK_SIGNATURE_REQUIRED=true
LIVEKIT_WEBHOOK_MAX_SKEW_MS=300000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300

# Database file path (SQLite for persistence v0)
LIFE_OS_DB=./server/data/lifeos.db
