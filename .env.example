# Frontend (Vite)
# Public backend origin used by the Base44 frontend.
VITE_API_ORIGIN=http://127.0.0.1:3001

# Backend (Fastify)
PORT=3001
HOST=127.0.0.1

# OpenClaw integration
# Preferred: set OPENCLAW_GATEWAY_TOKEN directly.
OPENCLAW_GATEWAY_TOKEN=
# Optional fallback: path to openclaw.json containing gateway.auth.token.
OPENCLAW_CONFIG=
OPENCLAW_RESPONSES_URL=http://127.0.0.1:18789/v1/responses
LIFE_OS_MODEL=openai-codex/gpt-5.2
LIFE_OS_MAX_TOKENS=1200

# Production readiness / security / observability
BILLING_SIGNING_SECRET=
BILLING_RECONCILIATION_ALERT_WEBHOOK_URL=
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300

# Database file path (SQLite for persistence v0)
LIFE_OS_DB=./server/data/lifeos.db
